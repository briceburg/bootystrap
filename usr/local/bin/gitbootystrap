#!/usr/bin/env bash
# gitbootystrap managed
set -eo pipefail

log(){ echo "$*" >&2 ; }
die(){ log "$*"; exit 1; }

booty_dir="/root/.gitbootystrap"

[ $EUID -eq 0 ] || die "Must execute as superuser."
[ -d "$booty_dir" ] || die "missing $booty_dir - has system been bootystrapped?"

exec git --git-dir "$booty_dir" --work-tree / "$@"
